 @using Revas.Models;
 @model List<Portfolio>
@{
    int count = 0;
}

<div class="container">
    <h1 class="btn btn-primary" asp-action="Create">Create</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Photo</th>
                 
            </tr>
        </thead>
        <tbody>
           @foreach(var item in Model)
           {
                <tr>
                    <th scope="row">@count</th>
                    <td><img width="100" src="~/Upload/@item.ImgUrl"></td>
                </tr>
                <td>
                   <a class="btn btn-dark" asp-action="Update" asp-route-id="@item.Id">Update</a>
                   <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                </td>
           }
            
        </tbody>
    </table>
</div>
